#include <iostream>
#include <string>
#include <cmath>
using namespace std;

void PrintLetterPattern(int num) {

	for (int i = 65; i <= 64 + num; i ++ ) {
		for (int j = 65; j <= i; j++) { // or for (int j = 1 ; j <= i - 65 + 1; j++)
			cout << char(i);
		}
		cout << endl;
	}

}

int main() {

	PrintLetterPattern(5);
}
